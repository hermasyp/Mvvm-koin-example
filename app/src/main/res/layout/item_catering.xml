<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    android:elevation="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_catering"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_catering_name"
            app:layout_constraintLeft_toRightOf="@id/img_catering"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_tier_icon"
            app:layout_constraintLeft_toRightOf="@id/img_catering"
            app:layout_constraintTop_toBottomOf="@id/tv_catering_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_catering_tier"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_catering_tier"
            app:layout_constraintLeft_toRightOf="@id/img_tier_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_catering_name"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/rating_view_catering"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:numStars="5"
            app:layout_constraintLeft_toRightOf="@id/img_catering"
            app:layout_constraintTop_toBottomOf="@id/tv_catering_tier" />

        <TextView
            android:id="@+id/tv_catering_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_view_catering"
            app:layout_constraintLeft_toRightOf="@id/rating_view_catering"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rating_view_catering" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>